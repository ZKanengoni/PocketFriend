<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketFriend.MainPage"
             BackgroundColor="#fff">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Image
            Source="hoodiehappy"
            WidthRequest="240"
            HeightRequest="240"
            VerticalOptions="CenterAndExpand"
            Margin="0, 0, 20, 80"
            Opacity="0.90">
        </Image>

        <Button 
            Text="Start"
            BackgroundColor="#B4AAF0"  
            TextColor="#fff"
            WidthRequest="162"
            HeightRequest="45"
            CornerRadius="30" 
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            TextTransform="None"
            FontFamily="BoldFont"
            FontSize="24"
            Padding="0, 0, 0, 1"
            Margin="0, 0, 0, 15"
            Clicked="NextPage"/>


        <Button 
            Text="Resume"
            BackgroundColor="#FFEA90"  
            TextColor="#fff"
            WidthRequest="160"
            HeightRequest="45"
            CornerRadius="30" 
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            TextTransform="None"
            FontFamily="BoldFont"
            FontSize="24"
            Padding="0, 0, 0, 1"/> 

    </StackLayout>

</ContentPage>
